#!/bin/sh

read
read datetime
read title
read meta
read lang

title=${title#\# }
text=$(bin/markdown)

content=$(cat <<CONTENT
<article>
<h1 id="title">$title</h1>
${meta:+<p id=\"meta\"><time datetime=\"$datetime\">$meta</time></p>}
<div id="text">
$text
</div>
</article>
CONTENT)

export lang author datetime title meta content
bin/html-page-tpl
