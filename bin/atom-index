#!/bin/sh

entries=$(cat <<END
src/web/these-pages.md
src/web/instapaper-without-javascript.md
src/openbsd/man-pages.md
src/openbsd/partitioning.md
src/openbsd/browser-refresh-on-save.md
END)

read first <<END
$entries
END
read datetime < $first

content=$(echo "$entries" | while read entry; do
	url="https://john.ankarstrom.se/${entry#src/}"
	url="${url%.md}.html"
	cat "$entry" | url="$url" bin/atom-entry
done)

export title datetime content
bin/atom-index-tpl
